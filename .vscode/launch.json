{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: main.py (default config)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "internalConsole",
            "justMyCode": true,
            "args": ["--data-path", "/home/dykderrick/mega/datasets/PreprocessedV2/rings"]
        },
        {
            "name": "Python: main.py (batch configs)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "internalConsole",
            "justMyCode": true,
            "args": [
                "--batch-configs-dirs", "${input:batchConfigsDirs}",
                "--data-path", "/home/dykderrick/mega/datasets/PreprocessedV2/rings"
            ],
        },
        {
            "name": "Python: main.py (custom config)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "internalConsole",
            "justMyCode": true,
            "args": [
                "--config", "${input:configPath}",
                "--data-path", "/home/dykderrick/mega/datasets/PreprocessedV2/rings"
            ]
        }
    ],
    "inputs": [
        {
            "id": "batchConfigsDirs",
            "type": "promptString",
            "description": "Directory containing batch configuration files",
            "default": "config/exp/dropout_p"
        },
        {
            "id": "configPath",
            "type": "promptString",
            "description": "Path to custom configuration file",
            "default": "config/Resnet.json"
        }
    ]
}
