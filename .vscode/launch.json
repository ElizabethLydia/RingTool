{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: main.py (default config)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": []
        },
        {
            "name": "Python: main.py (custom config)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--config", "${input:configPath}"
            ]
        }
    ]
}