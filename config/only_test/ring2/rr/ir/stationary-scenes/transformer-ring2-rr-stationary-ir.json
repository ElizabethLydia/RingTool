{
    "exp_name": "transformer-ring2-rr-stationary-ir",
    "mode": "test",
    "split":{
        "train": ["00009", "00012", "00005", "00020", "00031", "00022", "00029", "00016", "00026", "00024", "00014", "00010", "00011", "00027", "00008", "00019", "00030", "00003", "00025", "00006", "00033"], 
        "valid": ["00013", "00018", "00002", "00032", "00028", "00021", "00000"], 
        "test": ["00023", "00004", "00040", "00015", "00017", "00001", "00007"], 
        "5-Fold": {"Fold-1": ["00023", "00004", "00040", "00015", "00017", "00001", "00007"], 
            "Fold-2": ["00013", "00018", "00002", "00032", "00028", "00021", "00000"], 
            "Fold-3": ["00009", "00012", "00005", "00020", "00031", "00022", "00029"],
            "Fold-4": ["00016","00025", "00024", "00014", "00010", "00011", "00027"], 
            "Fold-5": ["00008", "00019", "00030", "00003", "00026" , "00006", "00033"]
    }
    },
    "dataset":{
        "ring_type": "ring2",
        "input_type": ["ir-filtered-rr"],
        "label_type": ["resp_rr"],
        "shuffle": true,
        "batch_size": 128,
        "quality_assessment": {
            "method": "elgendi",
            "th": 0
        },
        "target_fs": 100,
        "window_duration": 30,
        "experiment": ["Health", "Daily","Sport"],
        "task": ["sitting", "spo2", "talking", "shaking_head", "standing"],
        "accel_combined": false,
        "accel_combined_method": "magnitude"
    },
    "seed": 42,
    "csv_path": "csv/transformer/transformer.csv",
    "img_path": "img/transformer",
    "method": {
        "name": "transformer",
        "type": "ML", 
        "model_path": null,
        "params":{
            "in_channels": 1,
            "out_dim": 200,
            "num_blocks": 1,
            "num_inception_per_block": 2,
            "kernel_sizes": [9, 19],
            "bottleneck_channels": 16,
            "use_residual": true,
            "channels_first": false,
            "verbose": false,
            "backbone": false
        }
    },
    "train":{
        "device": "0",
        "epochs": 200,
        "lr": 1e-3,
        "criterion": "mse",
        "optimizer": "adam",
        "early_stopping": {
            "monitor": "val_loss",
            "patience": 20,
            "mode": "min"
        },
        "scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "patience": 10,
            "threshold": 1e-4,
            "min_lr": 1e-6
        },
        "model_checkpoint": {
            "monitor": "val_loss",
            "mode": "min",
            "save_best_only": true
        }
    },
    "test":{
        "device": "0",
        "batch_size": 128,
        "metrics": ["mae", "rmse", "mape", "pearson"],
        "model_path": null,
        "model_name": null
    },
    "pretrain_model": "TODO"
}
